<%= provide :title, t("users.new.signup") %>
<h1><%= t"users.new.signup" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=  form_for @user, url: "/signup" do |f| %>
    <%=  render "share/error_messages" %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form_control" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form_control" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form_control" %>

    <%= f.label :password_confirmation, t("confirm") %>
    <%= f.password_field :password_confirmation, class: "form_control" %>

    <%= f.submit t("users.new.create_acount"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
